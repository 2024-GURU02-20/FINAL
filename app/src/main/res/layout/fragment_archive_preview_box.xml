<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ArchivePreviewBoxFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="1dp"
    android:background="#828282" >

    <FrameLayout
        android:id="@+id/preview_box"
        android:layout_width="414dp"
        android:layout_height="1087dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/preview_box"
        android:elevation="8dp">

        <!-- 검정색 얇은 바를 누르고 있으면 위아래로 움직여야 하니까 스크롤뷰를 이용 -->
        <ScrollView
            android:id="@+id/scrollTool"
            android:layout_width="99dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/black" />

        <!-- 책 표지 이미지 -->
        <ImageButton
            android:id="@+id/previewBookImage"
            android:layout_width="151dp"
            android:layout_height="223dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/preview_book_image"
            android:elevation="10dp" />

        <!-- 책 제목 -->
        <TextView
            android:id="@+id/bookDetail"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="300dp"
            android:text="책 제목"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <!-- 저자 -->
        <TextView
            android:id="@+id/bookDetail2"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="330dp"
            android:text="저자"
            android:textStyle="bold"
            android:textColor="#9F9F9F"
            android:textSize="16dp" />

        <!-- 별점 -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="340dp"
            android:numStars="5"
            android:rating="4"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:stepSize="1" />

        <!-- 더보기 버튼 -->
        <Button
            android:id="@+id/addButton"
            android:layout_width="152dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:drawablePadding="4dp"
            android:text="더보기"
            android:layout_marginTop="400dp"
            android:layout_marginStart="131dp"
            android:background="@drawable/button_border"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <!-- border line gray -->
        <View
            android:layout_width="354dp"
            android:layout_height="2dp"
            android:layout_marginTop="475dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_line_gray"/>

        <!-- 리뷰 텍스트 -->
        <TextView
            android:id="@+id/reviewBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="510dp"
            android:text="리뷰"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <!-- 책 리뷰 칸 -->
        <EditText
            android:id="@+id/reviewInput"
            android:layout_width="354dp"
            android:layout_height="84dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="550dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/textview_border_dark"
            android:inputType="textMultiLine" />

        <!-- 마음에 드는 한 줄 텍스트 -->
        <TextView
            android:id="@+id/favoriteLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="685dp"
            android:text="마음에 드는 한 줄"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <!-- 마음에 드는 한 줄 칸 1 -->
        <EditText
            android:id="@+id/favoriteLineInput"
            android:layout_width="354dp"
            android:layout_height="84dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="725dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/textview_border_dark"
            android:inputType="textMultiLine" />

        <!-- 마음에 드는 한 줄 칸 2 -->
        <EditText
            android:id="@+id/favoriteLineInput2"
            android:layout_width="354dp"
            android:layout_height="84dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="820dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/textview_border_dark"
            android:inputType="textMultiLine" />


        <!-- 수정하기 버튼 -->
        <Button
            android:id="@+id/modifyReview"
            android:layout_width="152dp"
            android:layout_height="32dp"
            android:layout_marginStart="131dp"
            android:layout_marginTop="960dp"
            android:background="@drawable/button_border_gray"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="수정하기"
            android:textAlignment="center"
            android:textColor="#878787"
            android:textSize="16dp" />
    </FrameLayout>

</RelativeLayout>