<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArchiveFragment">

    <!-- 먼저 뒷 배경이 될 책 아카이빙 홈화면(feature-arch) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:background="#D5D5D5" >

        <!-- '책 아카이빙' 버튼 -->
        <TextView
            android:id="@+id/archive_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="책 아카이빙"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="55dp"
            android:gravity="center"
            android:elevation="5dp"
            android:layout_below="@id/archive_main"
            android:adjustViewBounds="true"
            android:background="@drawable/round_image"
            android:src="@drawable/your_profile_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/ProfileTool"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_below="@id/archive_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:elevation="1dp"
            android:background="@drawable/textview_border_dark"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/ProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_below="@id/archive_main"
            android:layout_marginTop="35.5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="120dp"
            android:text="프로필"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- 독서 캘린더 텍스트 -->
        <TextView
            android:id="@+id/ReadCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProfileTool"
            android:layout_marginTop="25dp"
            android:text="      독서 캘린더"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- '1월, 2025' 버튼 -->
        <Button
            android:id="@+id/date_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ReadCalendar"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/date_button_border"
            android:text="1월, 2025"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 화살표 이미지 (왼쪽) -->
        <ImageButton
            android:id="@+id/left_arrow_button"
            android:layout_width="20dp"
            android:layout_height="48dp"
            android:layout_below="@id/ReadCalendar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="360dp"
            android:elevation="5dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="이전"
            android:scaleType="centerInside"
            android:src="@drawable/_2025_01_23_023248" />

        <!-- 화살표 이미지 (오른쪽) -->
        <ImageButton
            android:id="@+id/right_arrow_button"
            android:layout_width="20dp"
            android:layout_height="48dp"
            android:layout_below="@id/ReadCalendar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:elevation="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="다음"
            android:scaleType="centerInside"
            android:src="@drawable/_2025_01_23_023232" />

        <!-- 캘린더뷰 (수정 필요) -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/date_button"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/book_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_book_placeholder"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendarRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/date_button"
            android:layout_margin="16dp"
            android:columnCount="7"
            android:orientation="vertical" />

        <!-- 책 추가하기 -->
        <Button
            android:id="@+id/addBook"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@id/calendarRecyclerView"
            android:layout_marginTop="0dp"
            android:layout_marginStart="140dp"
            android:background="@drawable/button_border_black"
            android:drawableLeft="@drawable/ic_save_icon"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="책 추가하기"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textColor="#000000" />

        <!-- 읽고 있는 책 -->
        <TextView
            android:id="@+id/ReadingBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addBook"
            android:layout_marginTop="15dp"
            android:text="      읽고 있는 책"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        < !-- 읽고 있는 책 이미지 1 -->
        <ImageButton
            android:id="@+id/RBimage_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@id/ReadingBook"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC"/>

        < !-- 읽고 있는 책 이미지 2 -->
        <ImageButton
            android:id="@+id/RBimage_button_2"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@id/ReadingBook"
            android:layout_marginStart="120dp"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC"/>

        <!-- 읽고 있는 책 표지 텍스트 1-->
        <TextView
            android:id="@+id/RBimage_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ReadingBook"
            android:layout_marginTop="45dp"
            android:layout_marginStart="38dp"
            android:text="책 표지"
            android:textColor="#000000"/>

        <!-- 읽고 있는 책 텍스트 1-->
        <TextView
            android:id="@+id/RBimage_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ReadingBook"
            android:layout_marginTop="45dp"
            android:layout_marginStart="140dp"
            android:text="책 표지"
            android:textColor="#000000"/>

        <!-- 툴바 -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation_menu"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/icon_color"
            app:itemTextColor="@color/icon_color"
            android:background="@color/white" />

    </RelativeLayout>

    <!-- preview box 시작 부분 -->
    <FrameLayout
        android:id="@+id/preview_box"
        android:layout_width="412dp"
        android:layout_height="500dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/preview_box"
        android:elevation="8dp" >

        <!-- 검정색 얇은 바를 누르고 있으면 위아래로 움직여야 하니까 스크롤뷰를 이용했는데 적합한지 모르겠습니다 -->
        <ScrollView
            android:id="@+id/scrollTool"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="160dp"
            android:background="@color/black" />

        <!-- 책 표지 이미지 -->
        <ImageButton
            android:id="@+id/previewBookImage"
            android:layout_width="180dp"
            android:layout_height="215dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/preview_book_image"
            android:elevation="10dp" />

        <!-- 책 상세 정보 -->
        <TextView
            android:id="@+id/bookDetail"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="75dp"
            android:layout_marginStart="225dp"
            android:text="책 제목"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/bookDetail2"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="225dp"
            android:text="저자, 출판사, 발행일"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <!-- 별점 -->
        <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:layout_marginTop="120dp"
        android:layout_marginStart="140dp"
        android:layout_below="@id/review_starRate"
        android:numStars="5"
        android:stepSize="1"
        android:rating="4"
        android:progressTint="@color/star_filled"
        android:progressBackgroundTint="@color/star_empty" />

        <!-- 성취도 -->
        <TextView
            android:id="@+id/achieve"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="170dp"
            android:layout_marginStart="225dp"
            android:text="성취도"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <!-- 성취도 막대기바 -->
        <ProgressBar
            android:id="@+id/achievement_bar"
            android:layout_width="140dp"
            android:layout_height="6dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="225dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="75"
            android:max="100"
            android:progressDrawable="@drawable/rounded_progress_bar" />

        <!-- 리뷰 쓴 날짜? -->
        <TextView
            android:id="@+id/reviewDate"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="225dp"
            android:text="날짜"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <!-- 책 리뷰 텍스트 -->
        <TextView
            android:id="@+id/reviewBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginStart="25dp"
            android:text="책 리뷰"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"/>

        <!-- 책 리뷰 칸 -->
        <EditText
            android:id="@+id/reviewInput"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="327dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/textview_border_dark"
            android:inputType="textMultiLine" />

        <!-- 마음에 드는 한 줄 텍스트 -->
        <TextView
            android:id="@+id/favoriteLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_marginStart="25dp"
            android:text="마음에 드는 한 줄"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"/>

        <!-- 마음에 드는 한 줄 칸 -->
        <EditText
            android:id="@+id/favoriteLineInput"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="410dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/textview_border_dark"
            android:inputType="textMultiLine" />

        <!-- 수정하기 버튼 -->
        <Button
            android:id="@+id/modifyReview"
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:layout_marginTop="460dp"
            android:layout_marginStart="85dp"
            android:background="@drawable/button_border_gray"
            android:drawableLeft="@drawable/ic_more_icon"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="수정하기"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textColor="#000000" />

        <!-- 더보기 버튼 -->
        <Button
            android:id="@+id/more_review"
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:layout_marginTop="460dp"
            android:layout_marginStart="210dp"
            android:background="@drawable/button_border_black2"
            android:drawableLeft="@drawable/ic_save_icon"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="더보기"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textColor="#000000" />

    </FrameLayout>

</FrameLayout>