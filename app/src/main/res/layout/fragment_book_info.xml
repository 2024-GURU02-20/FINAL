<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnGobackSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="책 이름"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 책 표지 -->
        <ImageView
            android:id="@+id/info_book_cover"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal" />


        <!--        여기 중간에 있는 바는 뭐지...? -->


        <!-- 책 제목 및 정보 -->
        <TextView
            android:id="@+id/info_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="책 제목"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/info_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저자"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/info_book_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="출판사"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/info_book_pub_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="발행일"
            android:textSize="14sp"/>

        <!--        여기 중간에 있는 라인은 뭐지...? -->

        <!-- 책 소개 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="책 소개"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/info_book_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 리뷰 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="리뷰"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_reviewsort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 리뷰 3개 뜨는 상자들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

        <!-- 마음에 드는 한 줄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="마음에 드는 한줄"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_bestlinesort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 마음에 드는 한 줄 3개 뜨는 상자들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
